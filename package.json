{
  "name": "@aderik/mcp-server-jira",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/jira.js",
  "description": "MCP server for Jira - Fixed for 2025 API deprecations. Search issues, manage tickets, and automate workflows through the Model Context Protocol.",
  "author": "Aderik Teekman",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aderik/mcp-server-jira.git"
  },
  "bugs": {
    "url": "https://github.com/aderik/mcp-server-jira/issues"
  },
  "homepage": "https://github.com/aderik/mcp-server-jira#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jira",
    "atlassian",
    "jira-api",
    "claude",
    "cursor",
    "ai-tools"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "typecheck": "tsc --noEmit",
    "start": "node dist/jira.js",
    "start:dev": "tsx --watch jira.ts",
    "fmt:check": "prettier --check .",
    "fmt": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "@types/node": "^22.10.2",
    "dotenv": "^17.2.3",
    "jira.js": "^5.2.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "tsx": "^4.7.1"
  }
}
