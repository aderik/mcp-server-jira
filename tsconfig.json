{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["*.ts", "tools/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
